<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background ="@drawable/back">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_gravity="center_vertical|center_horizontal"
        app:srcCompat="@drawable/speedster" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="148dp"
        app:srcCompat="@drawable/game" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="Welcome to RESPONSE Speed Game"
        android:textColor="#A92B"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="182dp"
        android:layout_height="92dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/start2" />

    <Button
        android:id="@+id/high_scores_button"
        android:layout_width="313dp"
        android:layout_height="101dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/leaderboard"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/quit_button"
        android:layout_width="338dp"
        android:layout_height="85dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@drawable/exit"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>

